@model TravelERP.Models.DatesSearch

@{
    ViewData["Title"] = "EsalDate";
}

<form asp-action="EsalDate">
    <div class="row align-items-center">
        <div class="col">
            <div class="form-control border-light bg-light  shadow-sm rounded  h-75 " style="width:500px;margin:auto">
                <h3 class="text-center ">تقرير الإيصالات بالتاريخ</h3>

            </div>
            <div class="form-control border-light  shadow-sm rounded  h-75 " style="width:500px;margin:auto;margin-top:10px">
                <h6 class="text-center font-weight-normal">* من فضلك اختر من بين تاريخين حتى يم عرض النتائج بطريقه سليمه</h6>
                <label class="font-weight-bold"> من تاريخ :</label>
                <input type="date" asp-for="StartDate" id="StartDate" name="StartDate" class="form-control" />
                <label class="font-weight-bold"> الى تاريخ :</label>
                <input type="date" asp-for="EndDate" id="EndDate" name="EndDate" class="form-control" />
                <div class="form-group" style="margin-top:15px">
                    <input type="submit" value="بحث" class="btn btn-success form-control" />
                </div>

            </div>

        </div>
    </div>

</form>

