@model IEnumerable<TravelERP.Models.MenuLE2>

@{
    ViewData["Title"] = "Index";
}

<h2>قائمه إيصالات منسدله 2</h2>

<p>
    <a asp-action="Create" class="btn btn-primary">إنشاء قائمه فرعيه 2</a>
</p>
<table class="table table-hover" id="MenuLE2">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.MenuLE0.M0_Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.MenuLE1.M1_Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.M2_Name)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.MenuLE0.M0_Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.MenuLE1.M1_Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.M2_Name)
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.Id">تعديل</a>
                </td>
            </tr>
        }
    </tbody>
</table>
@section scripts
    {
    <link href="~/DataTables/css/dataTables.bootstrap4.min.css" rel="stylesheet" />
    <script src="~/DataTables/js/jquery.dataTables.js"></script>
    <script type="text/javascript" src="~/DataTables/js/dataTables.bootstrap4.js"></script>
    <script type="text/javascript">
        $(document).ready(function () {
            $('#MenuLE2').DataTable();

        });
    </script>
