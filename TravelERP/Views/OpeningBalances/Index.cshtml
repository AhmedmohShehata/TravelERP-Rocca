@model IEnumerable<TravelERP.Models.OpeningBalance>

@{
    ViewData["Title"] = "Index";
}
<h2>الصفحه الرئيسيه للارصده الافتتاحيه</h2>

<p>
    <a asp-action="Create" class="btn btn-primary">إنشاء رصيد افتتاحى</a>
</p>
<table class="table table-hover" id="OpeningBalance">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Balance)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CustomerOrSupplier.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CustomerSupplier.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.MenuLE0Id)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.StatementTypeId)
            </th>

            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Balance)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CustomerOrSupplier.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CustomerSupplier.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.MenuLE0.M0_Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.StatementType.Name)
            </td>

            <td>
                <a asp-action="Delete" asp-route-id="@item.Id">إلغاء</a>
            </td>
        </tr>
        }
    </tbody>
</table>
@section scripts
    {
    <link href="~/DataTables/css/dataTables.bootstrap4.min.css" rel="stylesheet" />
    <script src="~/DataTables/js/jquery.dataTables.js"></script>
    <script type="text/javascript" src="~/DataTables/js/dataTables.bootstrap4.js"></script>
    <script type="text/javascript">
        $(document).ready(function () {
            $('#OpeningBalance').DataTable();
        });
    </script>
}
