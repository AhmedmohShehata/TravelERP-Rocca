@model IEnumerable<TravelERP.Models.NonSupplier>

@{
    ViewData["Title"] = "Index";
}

<h2>فصل الموردين</h2>

<p>
    <a asp-action="Create" class="btn btn-primary">إضافه مورد جديد</a>
</p>
<table class="table table-hover" id="NonSuppliers">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.CustomerSupplierId)
            </th>
            <th>
                @Html.DisplayName("اسم المورد")
            </th>
            <th>
                عمليات
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.CustomerSupplierId)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.CustomerSupplier.Name)
                </td>
                <td>
                    <a asp-action="Delete" asp-route-id="@item.Id"><i class="material-icons" title="إلغاء" Style='color:red'>cancel</i></a>
                </td>
            </tr>
        }
    </tbody>
</table>
@section scripts
    {
    <link href="~/DataTables/css/dataTables.bootstrap4.min.css" rel="stylesheet" />
    <script src="~/DataTables/js/jquery.dataTables.js"></script>
    <script type="text/javascript" src="~/DataTables/js/dataTables.bootstrap4.js"></script>
    <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
    <script type="text/javascript">
        $(document).ready(function () {
            $('#NonSuppliers').DataTable();
        });
    </script>
}

