@model IEnumerable<TravelERP.Models.MenuLE1>

@{
    ViewData["Title"] = "Index";
}

<h2>قائمه إيصالات منسدله 1</h2>

<p>
    <a asp-action="Create" class="btn btn-primary">إنشاء قائمه فرعيه 1</a>
</p>
<table class="table table-hover" id="MenuL1">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.MenuLE0.M0_Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.M1_Name)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.MenuLE0.M0_Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.M1_Name)

                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.Id">تعديل</a>
                </td>
            </tr>
        }
    </tbody>
</table>
@section scripts
    {
    <link href="~/DataTables/css/dataTables.bootstrap4.min.css" rel="stylesheet" />
    <script src="~/DataTables/js/jquery.dataTables.js"></script>
    <script type="text/javascript" src="~/DataTables/js/dataTables.bootstrap4.js"></script>
    <script type="text/javascript">
        $(document).ready(function () {
            $('#MenuL1').DataTable();

        });
        $('#MenuL1_filter').animate({
            position: 'absolute',
            left: '30px' });
    </script>
}

