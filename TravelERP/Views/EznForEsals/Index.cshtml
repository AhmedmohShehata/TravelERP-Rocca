@model IEnumerable<TravelERP.Models.EznForEsal>

@{
    ViewData["Title"] = "Index";
}

<h2>الصفحه الرئيسيه للاذون</h2>

<p>
    <a asp-action="Create">إنشاء</a>
</p>
<table class="table table-hover" id="Ezn">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.EznId)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.EznDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CustomerSupplierId)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ExpenseName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.AmountWithdrawn)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CompanyID)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PaymentMethodId)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.UserId)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.EznId)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.EznDate)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.CustomerOrSupplier.Name) - @Html.DisplayFor(modelItem => item.CustomerSupplier.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.MenuLE0.M0_Name)  @Html.DisplayFor(modelItem => item.ExpenseName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.AmountWithdrawn)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Company.Company_Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.PaymentMethod.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.User.UserName)
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.Id">تعديل</a> |
                    <a asp-action="Details" asp-route-id="@item.Id">معلومات</a>
                    <a asp-action="PrintEznForEsal" asp-route-id="@item.Id">طباعه</a>
                </td>
            </tr>
        }
    </tbody>
</table>
@section scripts
    {
    <link href="~/DataTables/css/dataTables.bootstrap4.min.css" rel="stylesheet" />
    <script src="~/DataTables/js/jquery.dataTables.js"></script>
    <script type="text/javascript" src="~/DataTables/js/dataTables.bootstrap4.js"></script>
    <script type="text/javascript">
        $(document).ready(function () {
            $('#Ezn').DataTable();
        });
    </script>
}

