        @Html.DisplayFor(model => model.Name)
    </div>

    <label style="text-decoration:underline;" class="text-info"> @Html.DisplayNameFor(model => model.PhoneNumber1) : </label>
    <div class="form-group bg-light shadow-sm py-md-2">
        @Html.DisplayFor(model => model.PhoneNumber1)
    </div>

    <label style="text-decoration:underline;" class="text-info"> @Html.DisplayNameFor(model => model.PhoneNumber2) : </label>
    <div class="form-group bg-light shadow-sm py-md-2">
        @Html.DisplayFor(model => model.PhoneNumber2)
    </div>

    <label style="text-decoration:underline;" class="text-info"> @Html.DisplayNameFor(model => model.Email) : </label>
    <div class="form-group bg-light shadow-sm py-md-2">
        @Html.DisplayFor(model => model.Email)
    </div>

    <label style="text-decoration:underline;" class="text-info"> @Html.DisplayNameFor(model => model.Adrress) : </label>
    <div class="form-group bg-light shadow-sm py-md-2">
        @Html.DisplayFor(model => model.Adrress)
    </div>
    <label style="text-decoration:underline;" class="text-info"> معلومات جواز السفر : </label>
    <div class="form-group bg-light shadow-sm py-md-2">
        <strong>@Html.DisplayNameFor(model => model.PassportNo) :</strong>
