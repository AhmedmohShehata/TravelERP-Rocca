@model TravelERP.Models.CustomerSupplier

@{
    ViewData["Title"] = "Details";
}

<div class="row align-items-center">
    <div class="col-md">
        <div class="form-control border-light bg-light  shadow-sm rounded  h-75 " style="max-width:500px;margin:auto">
            <h3 class="text-center text-info">@Model.CustomerOrSupplier.Name</h3>
        </div>
        <hr />
    </div>
</div>

<div class="col-md-5">
    <label style="text-decoration:underline;" class="text-info"> @Html.DisplayNameFor(model => model.Name) : </label>
