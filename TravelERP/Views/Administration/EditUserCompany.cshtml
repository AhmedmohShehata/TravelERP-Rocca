@model EditUserViewModel

@{
    ViewBag.Title = "Edit User";
}

<form method="post" class="mt-3">
    <input type="hidden" asp-for="Email" />
    <input type="hidden" asp-for="UserName" />

    <div class="form-control border-light bg-light  shadow-sm rounded  h-75 " style="max-width:500px;margin:auto">
        <h3 class="text-center ">التحويل بين الشركات</h3>
    </div>
    <div class="form-control border-light  shadow-sm rounded  h-75 " style="max-width:500px;margin:auto;margin-top:10px">
        <div class="form-group">
            <label asp-for="Id" class="control-label"></label>
            <input asp-for="Id" disabled class="form-control">
        </div>
        <div class="form-group">
            <label asp-for="UserName" class="control-label"></label>
            <input asp-for="UserName" disabled class="form-control">
            <span asp-validation-for="UserName" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="CompanyId" class="control-label"></label>
            <select asp-for="CompanyId" id="CustomerSupplierId" class="form-control" asp-items="ViewBag.CompanyId"></select>
            <span asp-validation-for="CompanyId" class="text-danger"></span>
        </div>

        <div asp-validation-summary="All" class="text-danger"></div>

        <div class="form-group">
            <button type="submit" class="btn btn-success form-control">تحويل</button>
        </div>

    </div>


</form>
