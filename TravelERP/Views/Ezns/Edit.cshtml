@model TravelERP.Models.Ezn

@{
    ViewData["Title"] = "Edit";
}

<div class="form-control border-light bg-light  shadow-sm rounded  h-75 " style="max-width:500px;margin:auto">
    <h4 class="text-center text-info">تعديل إذن صرف رقم @Html.DisplayFor(model => model.EznId)</h4>
</div>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <input type="hidden" asp-for="EznId" />
            <input type="hidden" asp-for="EznDate" />
            <input type="hidden" asp-for="BillId" />
            <input type="hidden" asp-for="BillIdId" />

            @if (Model.MenuLE0Id != null && Model.MenuLE1Id == null && Model.MenuLE1Id == null && Model.MenuLE0.M0_Name != "سياحة دينية")
            {
                <div class="form-group">
                    <span style="color:red">*</span> <label asp-for="CustomerOrSupplierId" class="control-label"></label>
                    <select asp-for="CustomerOrSupplierId" id="COS" class="form-control" asp-items="ViewBag.CustomerOrSupplierId"></select>
                    <span asp-validation-for="CustomerOrSupplierId" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <span style="color:red">*</span> <label asp-for="CustomerSupplierId" class="control-label"></label>
                    <select asp-for="CustomerSupplierId" id="CS" class="form-control" asp-items="ViewBag.CustomerSupplierId"></select>
                    <span asp-validation-for="CustomerSupplierId" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <span style="color:red">*</span> <label asp-for="MenuLE0Id" class="control-label"></label>
                    <select asp-for="MenuLE0Id" id="MenuLE0" class="form-control" asp-items="ViewBag.MenuLE0Id"></select>
                    <span asp-validation-for="MenuLE0Id" class="text-danger"></span>
                </div>
            }
            @if (Model.MenuLE0Id != null && Model.MenuLE1Id != null && Model.MenuLE1Id != null && Model.MenuLE0.M0_Name != "سياحة دينية")
            {
                <div class="form-group">
                    <span style="color:red">*</span> <label asp-for="CustomerOrSupplierId" class="control-label"></label>
                    <select asp-for="CustomerOrSupplierId" id="COS" class="form-control" asp-items="ViewBag.CustomerOrSupplierId"></select>
                    <span asp-validation-for="CustomerOrSupplierId" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <span style="color:red">*</span> <label asp-for="CustomerSupplierId" class="control-label"></label>
                    <select asp-for="CustomerSupplierId" id="CS" class="form-control" asp-items="ViewBag.CustomerSupplierId"></select>
                    <span asp-validation-for="CustomerSupplierId" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <span style="color:red">*</span> <label asp-for="MenuLE0Id" class="control-label"></label>
                    <select asp-for="MenuLE0Id" id="MenuLE0" class="form-control" asp-items="ViewBag.MenuLE0Id"></select>
                    <span asp-validation-for="MenuLE0Id" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="MenuLE1Id" class="control-label"></label>
                    <select asp-for="MenuLE1Id" id="MenuLE1" class="form-control" asp-items="ViewBag.MenuLE1Id">
                        <option value="" hidden disabled selected>من فضلك اختر من القائمه ...</option>
                    </select>
                </div>
                <div class="form-group">
                    <label asp-for="MenuLE2Id" class="control-label"></label>
                    <select asp-for="MenuLE2Id" id="MenuLE2" class="form-control" asp-items="ViewBag.MenuLE2Id">
                        <option value="" hidden disabled selected>من فضلك اختر من القائمه ...</option>
                    </select>
                </div>

            }


            else if (Model.MenuLZ0Id != null)
            {

                <div class="form-group">
                    <span style="color:red">*</span> <label asp-for="Name" class="control-label"></label>
                    <input asp-for="Name" class="form-control" />
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <span style="color:red">*</span> <label asp-for="MenuLZ0Id" class="control-label"></label>
                    <select asp-for="MenuLZ0Id" id="MenuLZ0" class="form-control" asp-items="ViewBag.MenuLZ0Id"></select>
                    <span asp-validation-for="MenuLZ0Id" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <span style="color:red">*</span> <label asp-for="MenuLZ1Id" class="control-label"></label>
                    <select asp-for="MenuLZ1Id" id="MenuLZ1" class="form-control" asp-items="ViewBag.MenuLZ1Id"></select>
                    <span asp-validation-for="MenuLZ1Id" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <span style="color:red">*</span> <label asp-for="MenuLZ2Id" class="control-label"></label>
                    <select asp-for="MenuLZ2Id" id="MenuLZ2" class="form-control" asp-items="ViewBag.MenuLZ2Id"></select>
                    <span asp-validation-for="MenuLZ2Id" class="text-danger"></span>
                </div>
            }


            else if (Model.MenuLE0.M0_Name == "سياحة دينية")
            {
                <div class="form-group">
                    <span style="color:red">*</span> <label asp-for="CustomerOrSupplierId" class="control-label"></label>
                    <select asp-for="CustomerOrSupplierId" id="COS" class="form-control" asp-items="ViewBag.CustomerOrSupplierIdReligious"></select>
                    <span asp-validation-for="CustomerOrSupplierId" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <span style="color:red">*</span> <label asp-for="CustomerSupplierId" class="control-label"></label>
                    <select asp-for="CustomerSupplierId" id="CS" class="form-control" asp-items="ViewBag.CustomerSupplierId"></select>
                    <span asp-validation-for="CustomerSupplierId" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <span style="color:red">*</span> <label asp-for="MenuLE0Id" class="control-label"></label>
                    <select asp-for="MenuLE0Id" id="MenuLE0" class="form-control" asp-items="ViewBag.MenuLE0IdReligious"></select>
                    <span asp-validation-for="MenuLE0Id" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <span style="color:red">*</span> <label asp-for="MenuLE1Id" class="control-label"></label>
                    <select asp-for="MenuLE1Id" id="MenuLE1" class="form-control" asp-items="ViewBag.MenuLE1Id"></select>
                    <span asp-validation-for="MenuLE1Id" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <span style="color:red">*</span> <label asp-for="MenuLE2Id" class="control-label"></label>
                    <select asp-for="MenuLE2Id" id="MenuLE2" class="form-control" asp-items="ViewBag.MenuLE2Id"></select>
                    <span asp-validation-for="MenuLE2Id" class="text-danger"></span>
                </div>

            }

            <div class="form-group">
                <span style="color:red">*</span> <label asp-for="AmountWithdrawn" class="control-label"></label>
                <input asp-for="AmountWithdrawn" class="form-control" />
                <span asp-validation-for="AmountWithdrawn" class="text-danger"></span>
            </div>

            <div class="form-group">
                <span style="color:red">*</span> <label asp-for="ExpenseName" class="control-label"></label>
                <textarea asp-for="ExpenseName" class="form-control" rows="4"></textarea>
                <span asp-validation-for="ExpenseName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <span style="color:red">*</span> <label asp-for="PaymentMethodId" class="control-label"></label>
                <select asp-for="PaymentMethodId" class="form-control" asp-items="ViewBag.PaymentMethodId"></select>
                <span asp-validation-for="PaymentMethodId" class="text-danger"></span>
            </div>
            <input type="hidden" asp-for="UserId" />
            <input type="hidden" asp-for="CompanyID" />
            <div class="form-group">
                <input type="submit" value="حفظ" class="btn btn-primary" />
                <a asp-action="Index" class="btn btn-outline-primary">العوده للقائمه الرئيسيه</a>
            </div>
        </form>
    </div>
</div>
@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
<script src="~/lib/jquery/dist/jquery.js"></script>
<script>
    $(function () {
        $("#MenuLZ0").change(function () {
            var url = '@Url.Content("~/")' + "MenuLZ2/GetMenuLZ1";
            var ddsource = "#MenuLZ0";
            $.getJSON(url, { id: $(ddsource).val() }, function (data) {
                var items = "";
                $("#MenuLZ1").empty();
                $.each(data, function (i, row) {
                    items += "<option value='" + row.value + "'>" + row.text + "</option>";
                });
                $("#MenuLZ1").html(items);
            })
        });
    });

</script>

