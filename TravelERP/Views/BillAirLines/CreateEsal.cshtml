@model TravelERP.Models.Esal

@{
    ViewData["Title"] = "Create";
}

<h3>إنشاء</h3>

<h4>إيصال استلام</h4>
<hr />

<div class="row">
    <div class="col-md-4">
        <form asp-action="CreateEsal">
            <div asp-validation-summary="All" class="text-danger"></div>
            <input type="hidden" asp-for="BillId" value="@ViewBag.IDBill" />
            <input type="hidden" asp-for="MenuLE0Id" value="@ViewBag.MenuLE0Id" />
            <input type="hidden" asp-for="MenuLE1Id" value="@ViewBag.MenuLE1Id" />
            <input type="hidden" asp-for="MenuLE2Id" value="@ViewBag.MenuLE2Id" />
            <input type="hidden" asp-for="CustomerOrSupplierId" value="@ViewBag.CustomerOrSupplierId" />
            <input type="hidden" asp-for="CustomerSupplierId" value="@ViewBag.CustomerSupplierId" />
            <input type="hidden" asp-for="TicketExportId" value="@ViewBag.TicketExportId" />
            <input type="hidden" asp-for="BillIdId" value="@ViewBag.BillId" />
            <input type="hidden" asp-for="DepositDesc" value="@ViewBag.Byan" />

            <label style="text-decoration:underline;" class="text-info"> الاسم : </label>
            <div class="form-group bg-light shadow-sm py-md-2">
                @ViewBag.CustomerName
            </div>

            <label style="text-decoration:underline;" class="text-info"> معلومات الفاتوره : </label>
            <div class="form-group bg-light shadow-sm py-md-2">
                <label asp-for="BillIdId" class="control-label"></label> : @ViewBag.BillId
                <br />
                <label class="control-label">تاريخ الفاتوره</label> : @ViewBag.BillDate
            </div>

            <label style="text-decoration:underline;" class="text-info"> بـــيــــان : </label>
            <div class="form-group bg-light shadow-sm py-md-2">
                @ViewBag.Byan
            </div>
            <div class="form-group">
                <span style="color:red">*</span> <label asp-for="AmountPaid" class="control-label"></label>
                <input asp-for="AmountPaid" class="form-control" />
                <span asp-validation-for="AmountPaid" class="text-danger"></span>
            </div>
            <div class="form-group">
                <span style="color:red">*</span> <label asp-for="PaymentMethodId" class="control-label"></label>
                <select asp-for="PaymentMethodId" class="form-control" asp-items="ViewBag.PaymentMethodId"></select>
            </div>
            <div class="form-group">
                <input type="submit" value="إنشاء" class="btn btn-success" />
                <a asp-action="Index" class="btn btn-outline-success">الرجوع للقائمه الرئيسيه</a>

            </div>
        </form>
    </div>
</div>

<div>
</div>

